<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemMenuImage3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemMenuName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Item Name"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/itemMenuImage3"
        app:layout_constraintStart_toEndOf="@id/itemMenuImage3"
        app:layout_constraintTop_toTopOf="@id/itemMenuImage3" />

    <TextView
        android:id="@+id/itemMenuQuantity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="x0"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/itemMenuImage3"
        app:layout_constraintEnd_toStartOf="@id/removeOrderButton"
        app:layout_constraintTop_toTopOf="@id/itemMenuImage3" />

    <Button
        android:id="@+id/removeOrderButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="X"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="@id/itemMenuImage3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemMenuImage3" />
</androidx.constraintlayout.widget.ConstraintLayout>